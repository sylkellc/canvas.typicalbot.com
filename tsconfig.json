{
    "compilerOptions": {
        "alwaysStrict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "module": "CommonJS",
        "moduleResolution": "Node",
        "noImplicitAny": false,
        "strict": true,
        "target": "ES6",
        "outDir": "dist"
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*"
    ]
}
